<configuration>
    <kafkaConsumer>
        <!--<zookeeper.connection>spark1:2181,spark2:2181</zookeeper.connection>-->
        <zookeeper.connection>localhost:2181</zookeeper.connection>
        <group.id>cg2</group.id>
        <topic>topic2-part3-repl1</topic>
        <threadNum>1</threadNum>

    </kafkaConsumer>
    <buffer>
        <capacity>1000000</capacity>
    </buffer>

    <hadoop>
        <outputDir>hdfs://spark1:9000/user/tsingfu/tmp/kafka2hdfs</outputDir>
        <outputFilePrefix>tmp1</outputFilePrefix>
        <batch.limit>10</batch.limit>
        <batch.max.ms>30000</batch.max.ms>
        <buffer.check.sleep>5000</buffer.check.sleep>
    </hadoop>
</configuration>